# EditorConfig for Red Hat Demo Development Environment
# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# YAML files (Ansible, Kubernetes, etc.)
[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

# Ansible specific files
[{playbook,playbooks,roles,tasks,handlers,vars,defaults,meta}/**/*.{yml,yaml}]
indent_size = 2
max_line_length = 160

# Terraform files
[*.{tf,tfvars}]
indent_size = 2
max_line_length = 120

# HashiCorp Configuration Language
[*.hcl]
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
max_line_length = 120

# Markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80

# JSON files
[*.json]
indent_size = 2

# JavaScript and TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# Docker files
[{Dockerfile,Dockerfile.*,*.dockerfile}]
indent_size = 2

# Makefile
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Ruby files (Vagrant, etc.)
[*.{rb,rake}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# INI files
[*.ini]
indent_size = 2

# Configuration files
[*.{conf,config}]
indent_size = 2

# Jinja2 templates
[*.{j2,jinja,jinja2}]
indent_size = 2
max_line_length = 120

# License and documentation files
[{LICENSE,README,CHANGELOG,CONTRIBUTING}*]
max_line_length = 80

# Package files
[{package.json,composer.json,requirements.txt,Pipfile,pyproject.toml}]
indent_size = 2

# CI/CD files
[{.github,gitlab-ci,jenkinsfile,*.{yml,yaml}}]
indent_size = 2

# Container orchestration
[{docker-compose,k8s,kubernetes,openshift}/**/*.{yml,yaml}]
indent_size = 2
max_line_length = 120 